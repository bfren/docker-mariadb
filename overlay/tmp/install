#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add dbadm user.
#======================================================================================================================

bf-adduser dbadm


#======================================================================================================================
# Get MariaDB version.
#======================================================================================================================

cd /tmp

VERSION=$(cat VERSION)
bf-debug "MariaDB version ${VERSION}."


#======================================================================================================================
# Install MariaDB and dependencies.
#======================================================================================================================

bf-echo "Installing MariaDB v${VERSION}..."
apk add --no-cache \
    bash \
    openssl \
    mariadb=${VERSION} \
    mariadb-client=${VERSION} \
    mariadb-server-utils=${VERSION}
bf-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bf-debug "Cleaning up default database config and files."
rm -rf /etc/my.cnf* /etc/mysql /var/lib/mysql/*


#======================================================================================================================
# Create MariaDB directories.
#======================================================================================================================

bf-debug "Creating MariaDB directories."

mkdir -p /var/lib/backup

mkdir -p /etc/my.cnf.d/ssl
mkdir /ssl


#======================================================================================================================
# Add backup executable to main cron.
#======================================================================================================================

bf-debug "Adding db-backup to cron."
echo "0 */8 * * * /usr/local/bin/db-backup" >> /etc/crontabs/root
