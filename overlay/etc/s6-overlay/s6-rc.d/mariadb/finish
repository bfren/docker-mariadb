#!/command/with-contenv sh

set -euo pipefail
export BF_E="${PWD##*/}/$(basename ${0})"


#======================================================================================================================
# Old PIDs clog up the mysql directory
#======================================================================================================================

bf-echo "Clearing temporary files and old process IDs..."
rm -f ${MARIADB_DATA}/*.err
rm -f ${MARIADB_DATA}/*.pid
bf-done


#======================================================================================================================
# Show helpful log message.
#======================================================================================================================

bf-svc-finish -t
